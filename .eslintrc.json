{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["standard-with-typescript", "plugin:prettier/recommended"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"project": "./tsconfig.eslint.json"
	},
	"rules": {
		"prettier/prettier": "warn",
		"object-shorthand": "warn",
		"quotes": [
			"error",
			"single",
			{ "avoidEscape": true, "allowTemplateLiterals": true }
		]
	},
	"overrides": [
		{
			"files": ["tests/**/*"],
			"env": {
				"jest": true
			}
		}
	]
}
